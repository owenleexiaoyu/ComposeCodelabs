<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="life.xiaoyu.composestudyjam">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeStudyJam"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeStudyJam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HappyBirthdayCardActivity"
            android:theme="@style/Theme.ComposeStudyJam" />
        <activity android:name=".ComposeArticleActivity"
            android:theme="@style/Theme.ComposeStudyJam" />
        <activity android:name=".TaskManagerActivity"
            android:theme="@style/Theme.ComposeStudyJam" />
        <activity android:name=".ComposeQuadrantActivity"
            android:theme="@style/Theme.ComposeStudyJam" />
    </application>

</manifest>